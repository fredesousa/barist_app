<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-md-8 col-lg-6">
    <h1 class="text-center my-4">New Coffee</h1>

    <%= form_with(model: @coffee, local: true, html: { class: "form-coffee" }) do |form| %>
      <% if @coffee.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(@coffee.errors.count, "error") %> prohibited this coffee from being saved:</h2>

          <ul>
            <% @coffee.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :origin, class: "form-label" %>
        <%= form.text_field :origin, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :roaster, class: "form-label" %>
        <%= form.text_field :roaster, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :strength, class: "form-label" %>
        <%= form.number_field :strength, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :coffee_type, class: "form-label" %>
        <%= form.text_field :coffee_type, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :machine_type, class: "form-label" %>
        <%= form.text_field :machine_type, class: "form-control" %>
      </div>

      <div class="d-grid gap-2">
        <%= form.submit "Save Coffee", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <%= link_to 'Back', coffees_path, class: "btn btn-secondary mt-3" %>
  </div>
</div>
